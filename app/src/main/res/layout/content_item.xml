<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="?android:selectableItemBackground"
                                    android:layout_margin="2dp"
                                    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/Name"
                          android:textSize="24dp"
                          android:text="Ma tache"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/Date"
                          android:text="03 Décembre 2017 à 18h 45"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/Type"
                          android:text="Travail"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatCheckBox android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             android:layout_alignParentEnd="true"
                                                             android:layout_centerInParent="true"
                                                             android:layout_marginEnd="15dp"
                                                             android:id="@+id/appCompatCheckBox"/>
            </RelativeLayout>
        </LinearLayout>

 </android.support.v7.widget.CardView>

